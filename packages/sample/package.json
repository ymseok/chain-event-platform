{
  "name": "sample-contracts",
  "version": "0.0.1",
  "description": "Sample smart contracts for Chain Event Platform",
  "license": "MIT",
  "scripts": {
    "build": "forge build",
    "clean": "forge clean",
    "test": "forge test",
    "test:v": "forge test -vvv",
    "test:vv": "forge test -vvvv",
    "coverage": "forge coverage",
    "coverage:report": "forge coverage --report lcov",
    "fmt": "forge fmt",
    "fmt:check": "forge fmt --check",
    "anvil": "anvil",
    "anvil:fork": "anvil --fork-url $FORK_URL",
    "deploy:local": "forge script script/SampleToken.s.sol:SampleTokenScript --rpc-url http://localhost:8545 --broadcast",
    "deploy:local:verify": "forge script script/SampleToken.s.sol:SampleTokenScript --rpc-url http://localhost:8545 --broadcast -vvvv",
    "deploy:sepolia": "forge script script/SampleToken.s.sol:SampleTokenScript --rpc-url $SEPOLIA_RPC_URL --broadcast --verify",
    "deploy:mainnet": "forge script script/SampleToken.s.sol:SampleTokenScript --rpc-url $MAINNET_RPC_URL --broadcast --verify",
    "snapshot": "forge snapshot",
    "snapshot:diff": "forge snapshot --diff"
  },
  "devDependencies": {},
  "engines": {
    "node": ">=18.0.0"
  }
}

{
  "name": "chain-event-platform",
  "version": "0.0.1",
  "private": true,
  "description": "Blockchain Event Aggregation & Dispatch Platform",
  "license": "MIT",
  "scripts": {
    "build": "pnpm -r build",
    "build:admin-api": "pnpm --filter admin-api build",
    "dev:admin-api": "pnpm --filter admin-api start:dev",
    "test": "pnpm -r test",
    "test:admin-api": "pnpm --filter admin-api test",
    "lint": "pnpm -r lint",
    "format": "prettier --write \"packages/**/*.ts\"",
    "prisma:generate": "pnpm --filter admin-api prisma:generate",
    "prisma:migrate": "pnpm --filter admin-api prisma:migrate",
    "prisma:studio": "pnpm --filter admin-api prisma:studio"
  },
  "devDependencies": {
    "prettier": "^3.2.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}

{
  "name": "chain-event-platform",
  "version": "0.0.1",
  "private": true,
  "description": "Blockchain Event Aggregation & Dispatch Platform",
  "license": "MIT",
  "scripts": {
    "docker:up": "docker compose -f packages/admin-api/docker-compose.yml up -d",
    "docker:down": "docker compose -f packages/admin-api/docker-compose.yml down",
    "docker:logs": "docker compose -f packages/admin-api/docker-compose.yml logs -f",
    "build": "pnpm -r build",
    "build:admin-api": "pnpm --filter admin-api build",
    "build:admin-ui": "pnpm --filter admin-ui build",
    "build:demo-webhook": "pnpm --filter demo-webhook build",
    "build:blockchain-event-ingestor": "pnpm --filter blockchain-event-ingestor build",
    "dev:admin-api": "pnpm --filter admin-api start:dev",
    "dev:admin-ui": "pnpm --filter admin-ui dev",
    "dev:demo-webhook": "pnpm --filter demo-webhook dev",
    "dev:blockchain-event-ingestor": "pnpm --filter blockchain-event-ingestor dev",
    "test": "pnpm -r test",
    "test:admin-api": "pnpm --filter admin-api test",
    "test:admin-ui": "pnpm --filter admin-ui test",
    "lint": "pnpm -r lint",
    "format": "prettier --write \"packages/**/*.ts\"",
    "prisma:generate": "pnpm --filter admin-api prisma:generate",
    "prisma:migrate": "pnpm --filter admin-api prisma:migrate",
    "prisma:studio": "pnpm --filter admin-api prisma:studio"
  },
  "devDependencies": {
    "prettier": "^3.2.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
